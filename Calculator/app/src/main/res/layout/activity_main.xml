<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">





    <EditText
        android:id="@+id/tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter the numbers"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll"
        />



<LinearLayout
    android:id="@+id/ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"

    >
    <GridLayout
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:columnCount="4"
        android:layout_gravity="bottom"
        >

        <Button
            android:layout_margin="4dp"
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn1" />

        <Button
            android:layout_margin="4dp"
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/btn2" />

        <Button
            android:layout_margin="4dp"
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn3" />

        <Button
            android:layout_margin="4dp"
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnPlus" />

        <Button
            android:layout_margin="4dp"
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn4" />

        <Button
            android:layout_margin="4dp"
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn5" />

        <Button
            android:layout_margin="4dp"
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn6" />

        <Button
            android:layout_margin="4dp"
            android:id="@+id/btnMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnMinus" />

        <Button
            android:layout_margin="4dp"
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn7" />

        <Button
            android:layout_margin="4dp"
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn8" />

        <Button
            android:layout_margin="4dp"
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn9" />

        <Button
            android:layout_margin="4dp"
            android:id="@+id/btnMulti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnMulti" />

        <Button
            android:layout_margin="4dp"
            android:id="@+id/btn0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn0"
            app:layout_constraintTop_toBottomOf="@id/gv"
            />

        <Button
            android:layout_margin="4dp"
            android:id="@+id/btnDivide"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/gv"
            app:layout_constraintStart_toEndOf="@id/btn0"
            android:text="@string/btnDivide" />

        <Button
            android:layout_margin="4dp"
            android:id="@+id/btnClr"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/gv"
            app:layout_constraintStart_toEndOf="@id/btn0"
            android:text="@string/btnClr" />

        <Button
            android:layout_margin="4dp"
            android:id="@+id/btnAns"
            android:layout_columnSpan="4"
            android:layout_columnWeight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnAns"
            app:layout_constraintTop_toBottomOf="@id/gv"
            />


    </GridLayout>


</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
